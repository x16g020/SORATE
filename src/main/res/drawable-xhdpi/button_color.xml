<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 押下状態 -->
    <item android:state_pressed="true"
        android:state_enabled="true"
        android:state_focused="false">
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#0077bb"
                        android:endColor="#00bbff"
                        android:type="linear" />
                    <stroke
                        android:width="1dip"
                        android:color="#77ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 無効状態 -->
    <item
        android:state_enabled="false">
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#0077bb"
                        android:endColor="#00bbff"
                        android:type="linear" />
                    <stroke
                        android:width="1dip"
                        android:color="#77ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 通常状態 -->
    <item>
        <layer-list>
            <item>
                <shape
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#00bbff"
                        android:endColor="#0099dd"
                        android:type="linear" />
                    <stroke
                        android:width="1dip"
                        android:color="#77ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>